<UserControl x:Class="kalendar.kartochka"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kalendar"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="75">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textik" Text="{Binding Dota}" Background="Aqua"/>
        <Image x:Name="kartinka" Source="{Binding image}" />
    </Grid>
</UserControl>
